
public class practice03 {
	public static void main(String[] args) {
		int isHungry = 1;
		String food = "りんご";
		System.out.println("こんにちは");
		if (isHungry == 0) {
			System.out.println("お腹がいっぱいです。");
		} else {
			System.out.println("腹ペコです。");
			System.out.println(food + "を頂きます。");
		}
		System.out.println("ご馳走様でした。");
	}
}
